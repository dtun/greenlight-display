<!--
  Full Screen Layout (~800x480px)
  Displays complete Greenlight account information with all details
-->

<div class="view view--full">
  <!-- Header -->
  <div class="layout layout--col gap--space-between" style="height: 100%;">
    <div class="content">
      <h1 class="title title--large">Greenlight Balances</h1>

      {% if merge_variables.accounts.size > 0 %}
        <!-- Accounts Grid -->
        <div class="layout layout--col gap--large">
          {% for account in merge_variables.accounts %}
            <div class="item">
              <div class="meta">
                <span class="title title--medium">{{ account.name }}</span>
              </div>

              <div class="layout layout--row gap--medium" style="margin-top: 8px;">
                <!-- Spending Balance -->
                <div class="item item--third">
                  <span class="label">Spending</span>
                  <span class="value value--large">${{ account.spending | round: 2 }}</span>
                </div>

                <!-- Savings Balance -->
                <div class="item item--third">
                  <span class="label">Savings</span>
                  <span class="value value--large">${{ account.savings | round: 2 }}</span>
                </div>

                <!-- Total Balance -->
                <div class="item item--third">
                  <span class="label">Total</span>
                  <span class="value value--large value--highlight">${{ account.total | round: 2 }}</span>
                </div>
              </div>
            </div>

            {% unless forloop.last %}
              <hr class="divider" />
            {% endunless %}
          {% endfor %}
        </div>

        <!-- Parent Wallet -->
        {% if merge_variables.parentWallet %}
          <div class="item" style="margin-top: 24px; padding-top: 16px; border-top: 2px solid #000;">
            <div class="layout layout--row gap--space-between">
              <span class="label">Parent Wallet</span>
              <span class="value value--large">${{ merge_variables.parentWallet | round: 2 }}</span>
            </div>
          </div>
        {% endif %}
      {% else %}
        <div class="content content--center">
          <p class="description">No accounts found</p>
        </div>
      {% endif %}
    </div>

    <!-- Footer with timestamp -->
    <div class="footer">
      <span class="label">Updated: {{ merge_variables.timestamp | date: "%b %d, %I:%M %p" }}</span>
    </div>
  </div>
</div>
